<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:padding="@dimen/padding_medium"
    tools:context=".MainActivity">

    <!-- Title with gradient background -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary_blue"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_title"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <!-- Score Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_score_label"
                    android:textColor="@color/secondary_orange_light"
                    android:textSize="@dimen/text_size_score"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="0"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_score"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Difficulty Spinner -->
    <Spinner
        android:id="@+id/spinnerDifficulty"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/surface_white"
        android:contentDescription="@string/cd_difficulty_spinner"
        android:padding="@dimen/padding_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardTitle" />

    <!-- Numbers Display Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardNumbers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        app:cardBackgroundColor="@color/surface_white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerDifficulty">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large">

            <!-- First Number -->
            <TextView
                android:id="@+id/tvNumber1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/cd_number_one"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/text_size_number"
                android:textStyle="bold" />

            <!-- Operation Symbol Placeholder -->
            <TextView
                android:id="@+id/tvOperationSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="?"
                android:textColor="@color/secondary_orange"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <!-- Second Number -->
            <TextView
                android:id="@+id/tvNumber2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/cd_number_two"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/text_size_number"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Operation Buttons -->
    <LinearLayout
        android:id="@+id/layoutOperations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardNumbers">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="@dimen/button_width_operation"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/margin_small"
            android:backgroundTint="@color/btn_add_bg"
            android:contentDescription="@string/cd_operation_add"
            android:text="@string/btn_add"
            android:textSize="@dimen/text_size_button"
            android:textStyle="bold"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="@dimen/button_width_operation"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/margin_small"
            android:backgroundTint="@color/btn_subtract_bg"
            android:contentDescription="@string/cd_operation_subtract"
            android:text="@string/btn_subtract"
            android:textSize="@dimen/text_size_button"
            android:textStyle="bold"
            app:cornerRadius="@dimen/button_corner_radius" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="@dimen/button_width_operation"
            android:layout_height="@dimen/button_height"
            android:backgroundTint="@color/btn_multiply_bg"
            android:contentDescription="@string/cd_operation_multiply"
            android:text="@string/btn_multiply"
            android:textSize="@dimen/text_size_button"
            android:textStyle="bold"
            app:cornerRadius="@dimen/button_corner_radius" />
    </LinearLayout>

    <!-- Result Display Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        app:cardBackgroundColor="@color/secondary_orange_light"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutOperations">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_large"
            android:text="@string/tv_result_placeholder"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_result"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Generate Button -->
    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:backgroundTint="@color/primary_blue"
        android:contentDescription="@string/cd_generate_button"
        android:text="@string/btn_generate"
        android:textSize="@dimen/text_size_button"
        android:textStyle="bold"
        app:cornerRadius="@dimen/button_corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardResult" />

    <!-- History Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        app:cardBackgroundColor="@color/surface_white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintBottom_toTopOf="@id/btnResetScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGenerate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_history_label"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/history_empty"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Reset Score Button -->
    <Button
        android:id="@+id/btnResetScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/text_secondary"
        android:text="@string/btn_reset_score"
        android:textSize="@dimen/text_size_small"
        app:cornerRadius="@dimen/button_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>